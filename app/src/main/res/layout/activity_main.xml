<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">
    <Space
            android:layout_width="match_parent"
            android:layout_height="200dp" android:baselineAligned="false"/>
    <Button
            android:text="Open Data Base"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/openBDButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:onClick="getColumns"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    <Button
            android:text="Add A New Note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/newNoteButton" android:textAlignment="center"
            style="@style/Widget.AppCompat.Button.Colored"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    <Button
            android:text="Magic Buttom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/lastNoteChangeButton"
            style="@style/Widget.AppCompat.Button.Colored"/>
</LinearLayout>